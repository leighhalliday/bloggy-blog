.row
  .col-lg-12
    %h1.page-header
      = t('admin.categories')
      .pull-right
        = link_to t('admin.new'), new_admin_category_path, class: "btn btn-primary"

    .page-header__search-body
      = search_form_for [:admin, @search], :builder => SimpleForm::FormBuilder do |f|
        .form-group
          .input-group
            = f.input :name_cont, label: t('admin.search'), required: false
        .form-group
          .input-group
            %span.input-group-btn
              = f.submit t('admin.go'), class: "btn btn-default"

    = will_paginate @categories

    %table.table.table-hover
      %tr
        %th= t('admin.category.name')
        %th
      - @categories.each do |category|
        %tr
          %td= category.name
          %td= link_to t('admin.edit'), edit_admin_category_path(category), class: "btn btn-default"
